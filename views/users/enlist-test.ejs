<div class="enlist-wrapper">
    <h1>Welcome Back Recruit! We thought you went AWOL</h1>
    <div class="bg-modal">
        <div class="modal-content">
            <div class="divided-form">
                <div class="left-side-form">
                    <p>Join the Fight!</p>
                    <div class="badge-icon">
                        <img src="/assets/images/zombie-badge.png" alt="Avatar" class="avatar">
                    </div>
                </div>
                <div class="right-side-form">
                    <form action="enlist" autocomplete="on" method="POST">

                        <div>
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" placeholder="example@email.com" required>
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="Create Password" required>
                        </div>
                        <button id="login-btn" type="submit">Welcome Back</button>
                    </form>
                    <a href="enlist">Join Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

