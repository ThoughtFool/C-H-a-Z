<h1>Enlist</h1>
<div class="enlist-wrapper">
    <div class="bg-modal">
        <div class="modal-content">
            <form action="enlist" autocomplete="on" method="POST">
                <div>
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Your Name Here..." required>
                </div>
                <div>
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="example@email.com" required>
                </div>
                <div>
                    <label for="password">Password</label>
                    <input type="password" id="password" name="password" placeholder="password" suggested="new-password"
                        required>
                </div>
                <button id="register-btn" type="submit">Enlist</button>
            </form>
            <a href="login">Login</a>
        </div>
    </div>
</div>